{
  "name": "@totallyradlabs/partyline",
  "version": "1.0.0",
  "private": true,
  "description": "Uses MessageChannel to communicate between windows",
  "type": "module",
  "files": [
    "dist",
    "index.d.ts"
  ],
  "main": "./dist/partyline.umd.cjs",
  "module": "./dist/partyline.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./dist/partyline.js",
      "require": "./dist/partyline.umd.js"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "build:d": "tsc src/*.ts --declaration --emitDeclarationOnly --declarationDir dist/",
    "docs": "typedoc --options typedoc.cjs src/index.ts",
    "npm:publish": "npm publish --access public",
    "npm:dry-run": "npm publish --dry-run"
  },
  "devDependencies": {
    "@types/node": "^20.3.3",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vite-plugin-dts": "^1.7.2"
  },
  "dependencies": {
    "typedoc": "^0.23.28"
  }
}
