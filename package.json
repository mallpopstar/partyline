{
  "name": "@mallpopstar/partyline",
  "version": "1.0.0",
  "private": true,
  "description": "Partyline is a JavaScript library that can send messages between APIs that support `postMessage`.",
  "type": "module",
  "files": [
    "dist",
    "index.d.ts"
  ],
  "main": "./dist/partyline.umd.cjs",
  "module": "./dist/partyline.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./dist/partyline.js",
      "require": "./dist/partyline.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "npm:publish": "npm publish --access public",
    "npm:dry-run": "npm publish --dry-run"
  },
  "devDependencies": {
    "@types/node": "^20.4.5",
    "typescript": "^5.1.6",
    "vite": "^4.4.7",
    "vite-plugin-dts": "^3.4.0"
  }
}
