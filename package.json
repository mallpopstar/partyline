{
  "name": "@mallpopstar/partyline",
  "version": "1.0.4-rc.0",
  "license": "MIT",
  "description": "Partyline is a JavaScript library that can send messages between APIs that support `postMessage`.",
  "type": "module",
  "keywords": [
    "cross-domain",
    "cross domain",
    "messagechannel",
    "broadcastchannel",
    "iframe",
    "postmessage",
    "webrtc",
    "webworker",
    "web worker",
    "worker",
    "websocket",
    "remote"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mallpopstar/partyline"
  },
  "files": [
    "dist",
    "index.d.ts"
  ],
  "main": "./dist/partyline.umd.js",
  "module": "./dist/partyline.es.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./dist/partyline.es.js",
      "require": "./dist/partyline.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "publish": "npm publish --access public"
  },
  "devDependencies": {
    "@types/node": "^20.4.5",
    "typescript": "^5.1.6",
    "vite": "^4.4.7",
    "vite-plugin-dts": "^3.4.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
